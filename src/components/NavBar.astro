---
const pathname = Astro.url.pathname;
const isActive = (p: string) => pathname === p;
---

<nav class="simple-nav">
  <ul>
    <li>
      <a href="/" class={isActive('/') ? "active" : ""}>Home</a>
    </li>
    <li>
      <a href="/projects" class={isActive('/projects') ? "active" : ""}>Projects</a>
    </li>
    <li>
      <a href="/otherworks" class={isActive('/otherworks') ? "active" : ""}>Other Works</a>
    </li>
    <li>
      <a href="/contact" class={isActive('/contact') ? "active" : ""}>Contact</a>
    </li>
  </ul>

  <style>
    .simple-nav {
      background: #fff;
      border-bottom: 1px solid #ddd;
      padding: 1rem 0;
      position: sticky;
      top: 0;
      z-index: 1000;
    }
    .simple-nav ul {
      list-style: none;
      display: flex;
      justify-content: center;
      gap: 2rem;
      margin: 0;
      padding: 0;
    }
    .simple-nav a {
      text-decoration: none;
      color: #333;
      font-weight: 500;
      padding-bottom: 0.2rem;
    }
    .simple-nav a.active {
      border-bottom: 2px solid #0d6efd;
    }
  </style>
</nav>
