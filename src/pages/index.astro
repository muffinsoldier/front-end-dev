---
// Mewo mewo API
const res = await fetch("https://meowfacts.herokuapp.com/");
const catData = await res.json();
const catFact = catData.data?.[0] || "Cats are mysterious creatures 🐾";

// Import global layout and styles
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import "~/styles/global.css";


---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Yazhou Zhang</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

	</head>

	<body>
		<NavBar />
    <main>
		<!--Intro section-->
    <section class="container my-5 d-flex flex-column flex-md-row align-items-center justify-content-center text-center text-md-start gap-4">
      <!--Profile Picture and Intro Text-->
      <div>
      <img src="/images/Portrait/yazhou.jpg" alt="Portrait of Yazhou" class="rounded-5" style="width: 150px; height: auto;" />
      </div>
    <!-- Text Section -->
		<div>
		<h1 class="fw-bold text-success mb-2">Heya!</h1>
		<p class="lead mb-0">
      I'm Yazhou — a UX/UI designer based in Dublin, part-time doodler, full-time cat enthusiast. 🐾<br class="d-none d-md-block" />
      This is where I put my favorite creative projects — hope they make you smile like they did for me. ✨
    </p>
		</div>
    </section>

    <!--Cat Fact Section-->
		<div class="text-center mb-5">
      <h4 class="mb-3">🐾 Let's start with a meowgical fact for today!</h4>
      <div class="quote mx-auto" style="max-width: 800px;">
      🐱 <em>{catFact}</em>
      </div>
		</div>

		<!--Skills & Tools Section-->
    <section class="text-center mt-5 mb-5">
      <h4 class="mb-4">🧰 And here are the tools I reach for (almost) daily</h4>
      <div class="d-flex flex-wrap justify-content-center gap-4 text-start" style="max-width: 800px; margin: 0 auto;">
        <div style="flex: 1 1 200px; min-width: 200px;">
          <strong>🎨 Design</strong><br>
          Figma, Whimsical, Adobe PS, Adobe Il
          <small class="text-muted">Where messy ideas get shaped into clean interfaces.</small>
        </div>

        <div style="flex: 1 1 200px; min-width: 200px;">
          <strong>📦 UI Kits</strong><br>
          Bootstrap, Material UI
          <small class="text-muted">I use these in Figma to match real-world dev systems.</small>
        </div>
        <div style="flex: 1 1 200px; min-width: 200px;">
          <strong>💻 Code</strong><br>
          HTML, CSS, JavaScript, Astro, Bootstrap 5
          <small class="text-muted">Just enough front-end to bring this site to life :)</small>
        </div>

      </div>
    </section>

    <!--Highlighted Projects Section-->
    <section class="container my-5 text-center">
      <h4 class="mb-4">👀 Then a peek at what I've been up to</h4>
      <div class="carousel-container mx-auto" style="max-width: 900px;">
        <div id="highlightCarousel" class="carousel slide" data-bs-ride="carousel">
          <div class="carousel-inner rounded shadow">

        <div class="carousel-item active">
          <a href="/projects/project1">
            <img src="/images/ProjectPics/CirrusCover.png" class="d-block w-100" alt="Project 1">
          </a>
        </div>

        <div class="carousel-item">
          <a href="/projects/project2">
            <img src="/images/ProjectPics/NabooCover.png" class="d-block w-100" alt="Project 2">
          </a>
        </div>

        <div class="carousel-item">
          <a href="/projects/project3">
            <img src="/images/ProjectPics/RaindropCover.png" class="d-block w-100" alt="Project 3">
          </a>
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#highlightCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#highlightCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>

    </div>
  </div>
</section>



    </main>
    <!--Footer-->
		<Footer />

	</body>
  
</html>
