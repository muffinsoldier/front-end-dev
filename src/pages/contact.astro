---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
import "~/styles/global.css";
---

<html lang="en">
  <head>
    <title>Contact - Yazhou Zhang</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"
      rel="stylesheet"
    />
  </head>

  <body>
    <NavBar />

    <main class="container text-center my-5">
      <!-- Header -->
      <h1 class="mb-3">Contact Me</h1>
      <p class="lead mb-4">I'm always happy to connect. Feel free to reach out!</p>

      <!-- Contact Buttons -->
      <div class="d-flex flex-column flex-sm-row justify-content-center gap-4 mb-5">
        <!-- LinkedIn -->
        <a
          href="https://www.linkedin.com/in/heath-zhang-402b64228"
          target="_blank"
          class="btn btn-outline-primary d-flex align-items-center gap-2"
        >
          <i class="bi bi-linkedin fs-4"></i> LinkedIn
        </a>

        <!-- Email -->
        <a
          href="mailto:your@email.com"
          class="btn btn-outline-success d-flex align-items-center gap-2"
        >
          <i class="bi bi-envelope fs-4"></i> Email Me
        </a>
      </div>

      <!-- Divider -->
      <hr class="my-5" style="max-width: 600px; margin: 2rem auto;" />

      <!-- Message Form -->
      <section style="max-width: 600px; margin: 0 auto;">
        <h2 class="mb-4">Leave me a message!</h2>
        <form onsubmit="handleSubmit(event)">
          <div class="mb-3 text-start">
            <label for="name" class="form-label">Your Name</label>
            <input
              type="text"
              class="form-control"
              id="name"
              placeholder="e.g. Yazhou"
              required
            />
          </div>
          <div class="mb-3 text-start">
            <label for="message" class="form-label">Your Message</label>
            <textarea
              class="form-control"
              id="message"
              rows="4"
              placeholder="Write something here..."
              required
            ></textarea>
          </div>
          <button type="submit" class="btn btn-primary">Send Message</button>
        </form>
        <p id="confirmation" class="mt-3 text-success fw-semibold" style="display: none;"></p>
      </section>
    </main>

    <Footer />

    <!-- Message handling script -->
    <script>
      /**
       * @param {Event} event
       */
      function handleSubmit(event) {
        event.preventDefault();
        const name = document.getElementById("name").value;
        const confirmation = document.getElementById("confirmation");
        confirmation.textContent = `Thanks, ${name}! Your message just made my day üêæ`;
        confirmation.style.display = "block";
      }
    </script>
  </body>
</html>

