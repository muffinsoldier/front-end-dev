---
const response = await fetch("https://api.open-meteo.com/v1/forecast?latitude=53.35&longitude=-6.26&current_weather=true");
const data = await response.json();
const weather = data.current_weather;
const weatherText = `Temperature: ${weather.temperature}°C, Wind: ${weather.windspeed} km/h`;
import ProjectCard from "../components/ProjectCard.astro";
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Yazhou Zhang</title>
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

		
		<style>
			body {
				font-family: Arial, sans-serif;
				margin: 0;
				padding: 0;
				background: #f9f9f9;
				color: #333
			}
			.container-top {
				padding: 2rem 0;
				text-align: center;
			}
			.seal {
				width: 80px;
				image-rendering: pixelated;
			}
			h1 {
				font-size: 2rem;
				margin-bottom: 0.5rem;
			}
			p {
				font-size: 1.1rem;
				line-height: 1.5;
			}
			.quote {
				display: inline-block;
				margin-top: 1rem;
				padding: .75rem 1rem;
				background-color: #fffbe6;
				border-left: 4px solid orange;
				font-style: italic;
				color: #444;
				border-radius: .25rem;
			}
			
		</style>
	</head>

	<body>
		<NavBar />
		<!--intro section-->
		<div class="container-top">
		<h1>Hello, it's Yazhou here!</h1>
		<p>I'm a UX/UI Designer based in Dublin Ireland. Welcome to my profolio site :)</p>
		<div class="seal-wrapper">
			<img src="/images/torp.gif" alt="Pixel Seal" class="seal" />
		</div>
		<div class="quote">
			☀️{weatherText} 
		</div>
		</div>

		<!--there are projects preview-->
		<main class="container my-5">
  <h2 class="text-center mb-4">My Projects</h2>

  <div class="row justify-content-center g-4">
    <div class="col-md-6">
      <ProjectCard
        title="Project 1"
        description="This is the description of this project"
        tags={["UX", "UI", "Figma"]}
		imageUrl="/images/project1.png"
        link="/projects/project-1" />
    </div>

    <div class="col-md-6">
      <ProjectCard
        title="Project 2"
        description="This is the description of this project"
        tags={["UX", "UI", "Research"]}
		imageUrl="/images/project2.png"
        link="/projects/project-2" />
    </div>

    <div class="col-md-6">
      <ProjectCard
        title="Project 3"
        description="This is the description of this project"
        tags={["UX", "UI", "Prototyping"]}
        imageUrl="/images/project3.png"
        link="/projects/project-3" />
    </div>

    <div class="col-md-6">
      <ProjectCard
        title="Project 4"
        description="This is the description of this project"
        tags={["UX", "UI", "Research"]}
        imageUrl="/images/project4.png"
        link="/projects/project-4" />
    </div>
  </div>
</main>

		<Footer />

	</body>
</html>
